#! /bin/bash
#
# Author: Edgar Zamora-GÃ³mez, 2015
#
# /etc/init.d/bw_consumer
#
### BEGIN INIT INFO
# Provides: bw_consumer
# Required-Start:
# Should-Start:
# Required-Stop:
# Should-Stop:
# Default-Start:  3 5
# Default-Stop:   0 1 2 6
# Short-Description: BW consumer daemon process
# Description:
### END INIT INFO

case "$1" in
  start)
    echo "Starting consumer"
    # Start the daemon
    python /home/vagrant/src/monitoring_app/bw_consumer.py start
    ;;
  stop)
    echo "Stopping server"
    # Stop the daemon
    python /home/vagrant/src/monitoring_app/bw_consumer.py stop
    ;;
  restart)
    echo "Restarting server"
    python /home/vagrant/src/monitoring_app/bw_consumer.py restart
    ;;
  *)
    # Refuse to do other stuff
    echo "Usage: /etc/init.d/bw_consumer.sh {start|stop|restart}"
    exit 1
    ;;
esac

exit 0
